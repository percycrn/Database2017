<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="client.ui.manage.subsidiary.SubsidiaryController"
          alignment="CENTER" hgap="10" vgap="10">

    <padding>
        <Insets top="25" right="25" bottom="10" left="25"/>
    </padding>

    <Text text="Add New" style="-fx-font: BOLD 23 Consolas;"
          GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <Text text="Subsidiary" style="-fx-font: BOLD 23 Consolas;"
          GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="subsidiary name" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="subsidiary_name" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="subsidiary" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="subsidiary_address" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="manager name" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="manager_name" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="start time" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="manager_time" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <HBox spacing="10" GridPane.rowIndex="5" GridPane.columnIndex="1">
        <Button text="submit" onAction="#addSubsidiary"/>
        <Button text="back" onAction="#back"/>
    </HBox>

</GridPane>
